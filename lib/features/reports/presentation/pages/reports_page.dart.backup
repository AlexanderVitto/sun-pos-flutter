                          onSelected: (selected) {
                            if (selected) {
                              _onPeriodChanged(period);
                            }
                          },
                          selectedColor: Colors.blue[100],
                          checkmarkColor: Colors.blue[600],
                        ),
                      ),
                    );
                  }).toList(),
            ),
